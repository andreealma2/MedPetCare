<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/rlSender"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_chat_sender"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/senderMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/senderTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/senderMessageTextView"
        android:layout_marginTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlReceiver"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:paddingVertical="8dp"
        android:orientation="vertical"
        android:gravity="start"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_chat_receiver"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receiverMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/receiverTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/receiverMessageTextView"
        android:layout_marginTop="4dp" />

    </LinearLayout>

</RelativeLayout>
